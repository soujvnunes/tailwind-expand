{
  "name": "@tailwind-expand/swc",
  "version": "0.3.0",
  "description": "SWC plugin for tailwind-expand - expand CSS aliases in SWC-based tools",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "tailwind_expand_swc.wasm",
    "tailwind_expand_swc.wasm.sha256"
  ],
  "scripts": {
    "build:wasm": "cargo build --target wasm32-wasip1 --release && cp target/wasm32-wasip1/release/tailwind_expand_swc.wasm .",
    "build:ts": "tsup",
    "build": "pnpm build:wasm && pnpm build:ts",
    "test": "vitest",
    "test:run": "vitest run",
    "checksum": "shasum -a 256 tailwind_expand_swc.wasm > tailwind_expand_swc.wasm.sha256",
    "verify": "shasum -a 256 -c tailwind_expand_swc.wasm.sha256",
    "prepublishOnly": "pnpm run build && pnpm run checksum"
  },
  "keywords": [
    "swc",
    "swc-plugin",
    "tailwind",
    "tailwindcss",
    "nextjs",
    "turbopack",
    "rspack"
  ],
  "author": "Victor Nunes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/soujvnunes/tailwind-expand.git",
    "directory": "packages/swc"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@tailwind-expand/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  }
}
